<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_5dp"
    android:background="@drawable/item_shape"
    android:paddingLeft="@dimen/divide_height_10dp"
    android:paddingRight="@dimen/divide_height_10dp">

    <TextView
        android:id="@+id/area_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/LOADING"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012"/>

    <TextView
        android:id="@+id/pavilion_count"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="4dp"
        android:text="@string/LOADING"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_name"/>

    <View
        android:id="@+id/line_view"
        style="@style/lineStyle"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/area_name"
        app:layout_constraintStart_toStartOf="@+id/area_name"
        app:layout_constraintTop_toBottomOf="@+id/pavilion_count"/>

    <ImageView
        android:id="@+id/switchButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/area"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/area_name"
        app:layout_constraintStart_toStartOf="@+id/area_name"
        app:layout_constraintTop_toBottomOf="@+id/line_view"/>

</android.support.constraint.ConstraintLayout>
