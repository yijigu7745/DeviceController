<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <Button
        android:id="@+id/btn_canel"
        android:layout_width="50dip"
        android:layout_height="40dip"
        android:textSize="16sp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_3171B9"
        android:background="@null"/>


    <Button
        android:id="@+id/btn_ok"
        android:layout_alignParentRight="true"
        android:layout_width="50dip"
        android:layout_height="40dip"
        android:textSize="16sp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/color_3171B9"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/btn_ok">

        <com.aigestudio.wheelpicker.widget.curved.WheelDatePicker
            android:id="@+id/wheelpicker_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <com.aigestudio.wheelpicker.widget.curved.WheelTimePicker
            android:id="@+id/wheelpicker_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

    </LinearLayout>



</RelativeLayout>